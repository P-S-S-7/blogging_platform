<div class="container mx-auto px-4 py-10">
	<div class="bg-gray-100 shadow-md rounded-lg p-6 mb-8">
		<div class="flex justify-between items-center border-b border-gray-300 pb-4 mb-6">
			<h1 class="text-2xl font-bold text-gray-800 underline"><%= @blog.title %></h1>
			<p class="text-sm text-gray-600"><%= @blog.user.email %></p>
		</div>

		<div>
			<p class="text-lg text-gray-700 leading-relaxed"><%= @blog.description %></p>
		</div>
	</div>

	<div class="flex justify-end space-x-4">
		<%= link_to "Back", blogs_path, class: "text-blue-600 hover:text-blue-800 underline" %>
		<%= link_to "Edit", edit_blog_path(@blog), class: "text-yellow-600 hover:text-yellow-800 underline" %>
		<%= button_to "Delete", @blog, method: :delete,
			data: { turbo_confirm: "Are you sure?" },
			class: "text-red-600 hover:text-red-800 underline" %>
	</div>
</div>

