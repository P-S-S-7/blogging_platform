<%= form_with model: blog, class: "space-y-6" do |form| %>

	<% if blog.errors.any? %>
		<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
			<h2 class="font-bold text-lg">Please fix the following errors:</h2>
			<ul class="mt-2 list-disc list-inside">
				<% blog.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="flex flex-col">
		<%= form.label :email, class: "text-lg font-medium text-gray-700" %>
		<%= form.text_field :email, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex flex-col">
		<%= form.label :name, class: "text-lg font-medium text-gray-700" %>
		<%= form.text_field :name, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex flex-col">
		<%= form.label :title, class: "text-lg font-medium text-gray-700" %>
		<%= form.text_field :title, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex flex-col">
		<%= form.label :description, class: "text-lg font-medium text-gray-700" %>
		<%= form.rich_text_area :description, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex justify-between items-center">
		<%= form.submit "Submit", class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
		<%= link_to "Cancel", blogs_path, class: "px-6 py-2 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
	</div>

<% end %>
