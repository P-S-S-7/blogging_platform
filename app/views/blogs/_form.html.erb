<%= form_with model: blog, class: "space-y-6" do |form| %>

	<div class="flex flex-col">
		<%= form.label :title, placeholder: "Enter a descriptive title", class: "text-lg font-medium text-gray-700" %>
		<%= form.text_field :title, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex flex-col">
		<%= form.label :description, class: "text-lg font-medium text-gray-700" %>
		<%= form.rich_text_area :description, class: "mt-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
	</div>

	<div class="flex justify-between items-center">
		<%= form.submit "Submit", class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
		<%= link_to "Cancel", blogs_path, class: "px-6 py-2 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
	</div>

<% end %>
