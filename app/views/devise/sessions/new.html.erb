<div class = "space-y-6 mx-auto bg-white p-8 shadow-lg rounded-lg flex flex-col justify-center items-center">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="w-full max-w-md">
			<h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Log in</h2>

			<div class="flex flex-col mb-4">
				<%= f.label :email, class: "mb-1 font-medium text-gray-700" %>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, 
					class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
			</div>

			<div class="flex flex-col mb-4">
				<%= f.label :password, class: "mb-1 font-medium text-gray-700" %>
				<%= f.password_field :password, autocomplete: "current-password", required: true, 
					class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
			</div>

			<% if devise_mapping.rememberable? %>
				<div class="flex items-center mb-4">
					<%= f.check_box :remember_me, class: "mr-8 rounded border-gray-300 focus:ring-blue-500" %>
					<%= f.label :remember_me, class: "ml-4 font-medium text-gray-700" %>
				</div>
			<% end %>

			<div class="w-full">
				<%= f.submit "Log In", class: "w-full py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
			</div>

			<div class="text-center mt-4">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	<% end %>
</div>
