<div class = "space-y-6 mx-auto bg-white p-8 shadow-lg rounded-lg flex flex-col justify-center items-center">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<h1 class="text-2xl font-bold text-gray-800 text-center mb-6">
			Edit <%= resource_name.to_s.humanize %>
		</h1>

		<%= render "devise/shared/error_messages", resource: resource %>

		<div class="flex flex-col">
			<%= f.label :email, class: "mb-1 font-medium text-gray-700" %>
			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
		</div>

		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			<div class="text-sm text-gray-600">
				Currently waiting confirmation for: <%= resource.unconfirmed_email %>
			</div>
		<% end %>

		<div class="flex flex-col">
			<%= f.label :password, class: "mb-1 font-medium text-gray-700" %>
			<small class="text-gray-500 mb-1">(leave blank if you don't want to change it)</small>
			<%= f.password_field :password, autocomplete: "new-password", class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
			<% if @minimum_password_length %>
				<small class="text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</small>
			<% end %>
		</div>

		<div class="flex flex-col">
			<%= f.label :password_confirmation, class: "mb-1 font-medium text-gray-700" %>
			<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
		</div>

		<div class="flex flex-col mb-4">
			<%= f.label :current_password, class: "mb-1 font-medium text-gray-700" %>
			<small class="text-gray-500 mb-1">(we need your current password to confirm your changes)</small>
			<%= f.password_field :current_password, autocomplete: "current-password", class: "px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
		</div>

		<div>
			<%= f.submit "Update", class: "w-full py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors mb-4" %>
		</div>

		<div class="flex items-center space-x-4 mt-4">
			<%= button_to "Cancel my account", registration_path(resource_name), 
				data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
				method: :delete, 
				class: "py-2 px-4 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors" %>

				<%= link_to "Back", :back, 
					class: "py-2 px-4 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition-colors" %>
		</div>
	<% end %>
</div>
